  <body>

	<div class="container">
	  <div class="header clearfix">
		<nav>
		  <ul class="nav nav-pills pull-right">
			<li role="presentation" class="active"><a href="/">Home</a></li>
		  </ul>
		</nav>
		<h3 class="text-muted">Microsoft Excel REST Graph API Explorer</h3>
	  </div>

	  <h3><span class="label label-primary">Chart update operations</span></h3>
<!--	 
				<select name="updateoption" class="form-control">
				 <option value="justupdate">Just update</option>				
				 <option value="loadupdate"></option>
				</select>
 -->				
  
				<div class="panel panel-default">
				  <div class="panel-heading">
					<h3 class="panel-title">Set position</h3>
				  </div>
				  <div class="panel-body">
						<form class="navbar-form navbar-left" method="post" action="/chartsetpositionroute">
						  <div class="form-group">
							<input type="text"   size=30 name="startcell" class="form-control" placeholder="Top-left cell where to move">
							<input type="text"  size=30 name="endcell" class="form-control" placeholder="Optional, cover up to this cell (including)">
				            <input type="hidden" name="sheetname" value="<%= sheetname %>">
				            <input type="hidden" name="id" value="<%= id %>">
							<button type="submit" class="btn btn-default">Go</button>
						  </div>
						</form>
				  </div>
				  <div class="panel-heading">
					<h3 class="panel-title">Reset source data</h3>
				  </div>				  
				  <div class="panel-body">
						<form class="navbar-form navbar-left" method="post" action="/chartsetsourceroute">
						  <div class="form-group">
							<input type="text"   size=30 name="sourcerange" class="form-control" placeholder="Source range address">
					        <select  name="seriesby" class="form-control" >
								<option value="Auto" selected="selected">Auto</option>
								<option value="Columns">Columns</option>
								<option value="Rows">Rows</option>			
							</select>
					        <input type="hidden" name="sheetname" value="<%= sheetname %>">
				            <input type="hidden" name="id" value="<%= id %>">						        
							<button type="submit" class="btn btn-default">Go</button>
						  </div>
						</form>
				  </div>
				  <div class="panel-heading">
					<h3 class="panel-title">Update chart properties</h3>
				  </div>
				  <div class="panel-body">
						<form class="navbar-form navbar-left" method="post" action="/chartsetpropupdateroute">
						  <div class="form-group">
							<input type="text"   size=20 name="name" class="form-control" placeholder="Name">
							<input type="text"   size=10 name="top" class="form-control" placeholder="Top point">
							<input type="text"   size=10 name="left" class="form-control" placeholder="Left point">							
							<input type="text"   size=10 name="height" class="form-control" placeholder="Height">							
							<input type="text"   size=10 name="width" class="form-control" placeholder="Width">
					        <input type="hidden" name="sheetname" value="<%= sheetname %>">
				            <input type="hidden" name="id" value="<%= id %>">						        
							<button type="submit" class="btn btn-default">Go</button>
						  </div>
						</form>
				  </div>


				</div>	
				
	</div> <!-- /container -->

  <div class="container"/>

